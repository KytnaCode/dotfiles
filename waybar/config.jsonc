{
    "layer": "top",
    "modules-left": ["group/hardware", "sway/mode"],
    "modules-center": ["sway/workspaces"],
    "modules-right": ["sway/language", "clock"],
    "reload_style_on_change": true,
    "height": 24,
    "margin": "4 0",
    "spacing": 12,
    "mode": "overlay",
    "sway/window": {
        "max-length": 50
    },
    "group/hardware": {
      "orientation": "horizontal",
      "modules": [
        "cpu",
        "memory"
      ]
    },
    "cpu": {
      "format": "CPU: {usage}%"
    },
    "memory": {
      "format": "Mem: {used}GiB"
    },
    "clock": {
        "format-alt": "{:%a, %d. %b  %H:%M}"
    }
}
