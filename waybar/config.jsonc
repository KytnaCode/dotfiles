{
    "layer": "top",
    "modules-left": ["sway/mode"],
    "modules-center": ["sway/workspaces"],
    "modules-right": ["cpu", "clock"],
    "reload_style_on_change": true,
    "height": 24,
    "margin": "4 0",
    "spacing": 12,
    "mode": "overlay",
    "sway/window": {
        "max-length": 50
    },
    "cpu": {
      "format": "CPU: {usage}%"
    }, 
    "clock": {
        "format-alt": "{:%a, %d. %b  %H:%M}"
    }
}
